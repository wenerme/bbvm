'===================================================
' 数学函数的定义，通过内嵌汇编实现数学运算
FUNCTION SIN!(X!)
	DIM SHARED STATIC_FLOAT!
	
	STATIC_FLOAT! = X!
	VASM("LD int r3,[VFLO_STATIC_FLOAT]")
	VASM("IN [VFLO_STATIC_FLOAT],16")
	SIN! = STATIC_FLOAT!
END FUNCTION

FUNCTION COS!(X!)
	DIM SHARED STATIC_FLOAT!
	
	STATIC_FLOAT! = X!
	VASM("LD int r3,[VFLO_STATIC_FLOAT]")
	VASM("IN [VFLO_STATIC_FLOAT],17")
	COS! = STATIC_FLOAT!
END FUNCTION

