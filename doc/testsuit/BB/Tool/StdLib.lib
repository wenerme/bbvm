FUNCTION ABS!(X!)
	DIM SHARED STATIC_FLOAT!
	
	STATIC_FLOAT! = X!
	VASM("LD int r3,[VFLO_STATIC_FLOAT]")
	VASM("IN [VFLO_STATIC_FLOAT],21")
	ABS! = STATIC_FLOAT!
END FUNCTION

FUNCTION ABS(X)
	IF X<0 THEN
	   ABS = -X
	ELSE
	   ABS = X
	END IF
END FUNCTION

